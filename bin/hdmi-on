#!/bin/bash

SCALE=$1
DEFAULT=1.76

if [ -z $SCALE ]; then
  SCALE=$DEFAULT
fi

eDP1_x=2560
eDP1_y=1700

#MON2=DP1
MON2=DP2

MON2_x=2560
MON2_y=1440

xrandr --fb $(echo "$eDP1_x + $MON2_x * $SCALE" | bc -l | xargs printf %0.f\\n)x$(echo "$eDP1_y + $MON2_y * $SCALE" | bc -l | xargs printf %.0f\\n) \
    --output eDP1 --mode ${eDP1_x}x${eDP1_y} \
    --output $MON2 --mode ${MON2_x}x${MON2_y} --scale ${SCALE}x${SCALE} --pos ${eDP1_x}x0 --panning $(echo "$MON2_x * $SCALE" | bc -l | xargs printf %.0f\\n)x$(echo "$MON2_y * $SCALE" | bc -l | xargs printf %.0f\\n)+${eDP1_x}+0
